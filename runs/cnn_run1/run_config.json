{
  "random_seed": 42,
  "dataset": {
    "path": "data/dataset.jsonl",
    "fasta": "hg38.fa",
    "window": 500,
    "train_frac": 0.7,
    "val_frac": 0.15,
    "stratify_by": "label"
  },
  "loader": {
    "batch_size": 64,
    "num_workers": 4
  },
  "optim": {
    "name": "AdamW",
    "lr": "3e-4",
    "weight_decay": "1e-2"
  },
  "trainer": {
    "epochs": 10
  },
  "model_cfg": "configs/cnn.yaml",
  "metrics": [
    "auroc",
    "auprc",
    "f1",
    "acc"
  ],
  "device": "cuda",
  "save_dir": "runs/cnn_run1"
}